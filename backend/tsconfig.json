{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}